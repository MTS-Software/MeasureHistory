<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gretha.processmanager.view.process.charts.StatisticChartController">
	<center>
		<HBox fx:id="hboxCharts" alignment="CENTER" BorderPane.alignment="CENTER">
			<children>
				<PieChart fx:id="pieChart" legendVisible="false" style="-fx-background-color: white;" HBox.hgrow="ALWAYS" />
				<BarChart fx:id="barChart" legendVisible="false" style="-fx-background-color: white;" HBox.hgrow="ALWAYS">
					<xAxis>
						<CategoryAxis fx:id="barChartXaxis" side="BOTTOM" />
					</xAxis>
					<yAxis>
						<NumberAxis fx:id="barChartYaxis" side="LEFT" />
					</yAxis>
				</BarChart>
			</children>
			<BorderPane.margin>
				<Insets />
			</BorderPane.margin>
		</HBox>
	</center>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</BorderPane>
